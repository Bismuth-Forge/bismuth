{
  "name": "bismuth",
  "version": "2.3.0",
  "description": "A dynamic tiling extension for KWin",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "esbuild": "0.14.1",
    "eslint": "8.3.0",
    "eslint_d": "11.1.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jsdoc": "37.1.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "4.0.0",
    "prettier": "2.5.0",
    "ttypescript": "1.5.13",
    "typedoc": "0.22.10",
    "typedoc-plugin-missing-exports": "0.22.6",
    "typedoc-plugin-rename-defaults": "0.4.0",
    "typescript": "4.5.2"
  },
  "scripts": {
    "clean": "scripts/clean.sh",
    "build": "scripts/build.sh",
    "sysdep-install": "scripts/sysdep-install.sh",
    "prebi-install": "npm run build",
    "bi-install": "scripts/install.sh",
    "bi-uninstall": "scripts/uninstall.sh",
    "restart-kwin-x11": "kwin_x11 --replace & disown",
    "restart-plasma": "plasmashell --replace & disown",
    "install-and-restart-kwin-x11": "npm run bi-install",
    "postinstall-and-restart-kwin-x11": "npm run restart-kwin-x11",
    "install-and-restart-plasma": "npm run bi-install",
    "postinstall-and-restart-plasma": "npm run restart-plasma",
    "install-and-restart": "npm run bi-install",
    "postinstall-and-restart": "npm run restart-kwin-x11 && npm run restart-plasma",
    "docs": "npx typedoc --out build/docs",
    "test": "scripts/test.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gikari/bismuth.git"
  },
  "author": "Mikhail Zolotukhin <mail@genda.life> (https://genda.life)",
  "contributors": [
    "Mikhail Zolotukhin <mail@genda.life> (https://genda.life)",
    "Eon S. Jeon <esjeon@hyunmu.am>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gikari/bismuth/issues"
  },
  "homepage": "https://github.com/gikari/bismuth#readme",
  "prettier": {}
}
