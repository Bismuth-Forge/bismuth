{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "noEmitOnError": false,
    "removeComments": true,
    "lib": [
      "es2016"
    ],
    "alwaysStrict": true,
    "strict": true
  },
  "typedocOptions": {
    "entryPoints": [
      "src"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
